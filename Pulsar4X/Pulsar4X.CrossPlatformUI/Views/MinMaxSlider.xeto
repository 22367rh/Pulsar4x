<?xml version="1.0" encoding="UTF-8"?>
<Panel
  xmlns="http://schema.picoe.ca/eto.forms" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >

  <TableLayout>
    <TableRow>
      <Label ItemsSource="{Binding Name}"  />
      <Slider ID="Slider" />
    </TableRow>
    <TableRow>
      <Label ItemsSource="{Binding MinValue}"  />
      <Spinner ItemSource="{Binding CurrentValue}" />
      <Label ItemSource="{Binding MaxValue}" />
    </TableRow>
  </TableLayout>
	
</Panel>